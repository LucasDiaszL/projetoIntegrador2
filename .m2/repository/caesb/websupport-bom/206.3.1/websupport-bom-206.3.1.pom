	<!-- ~~~~~~~~~ REPOSITORIES ~~~~~~~~~~~ -->
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

	<pluginRepositories>
		<pluginRepository>
			<id>Caesb Public Group</id>
			<url>http://desenv.caesb/nexus/content/groups/public/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

	<repositories>
		<repository>
			<id>Caesb Public Group</id>
			<url>http://desenv.caesb/nexus/content/groups/public/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

</project>